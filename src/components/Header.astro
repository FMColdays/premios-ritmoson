---
import Navegacion from "@components/Navegacion.astro";
const path = Astro.url.pathname
const isHome = path === '/' 
---

<header id='header' class:list={['fixed top-0 w-full p-4 z-50', { 'shadow static': !isHome }]}>
    <nav class='max-w-7xl m-auto flex justify-between items-center'>
        <a href="/">
        <img src="/img/ritmoson-logo.png" alt="Ritmoson Logo" class="w-28" />
        </a>
        <Navegacion />
    </nav>
</header>